{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "Firebase": {
    "RealtimeDatabaseUrl": "https://poke-d2753-default-rtdb.europe-west1.firebasedatabase.app/"
  },
  "Jwt": {
    "Key": "your-super-secret-jwt-key-that-should-be-at-least-256-bits",
    "Issuer": "pokemon-db-api",
    "Audience": "pokemon-db-users",
    "ExpiryInMinutes": 60
  },
  "ApiKeys": [
    "frontend-key-abcde"
  ],
  "RateLimit": {
    "RequestsPerMinute": 100,
    "TimeWindowMinutes": 1
  }
}
